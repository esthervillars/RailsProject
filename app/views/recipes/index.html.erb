<div class="container space">
<h1>Recipes</h1>
	<% @recipes.each_slice(3) do |recipes| %>
		<div class="row">
			<% recipes.each do |recipe| %>
				<div class="col-sm-4">
					<div class="recipe">
						<div class="image_wrapper">
							<%= link_to image_tag(recipe.image.url(:medium), class: "img-responsive"), recipe %>
						</div>
						<%= link_to recipe.title, recipe %>
					</div>
				</div>
			<% end %>
		</div>
	<% end %>
</div>
<div class="container space">
	<%= link_to 'Add New recipe', new_recipe_path, class:"btn btn-default btn-lg" %>
</div>
