<% if signed_in? %>
  
  <h4>Add a comment</h4>
  <%= bootstrap_form_for([@post, @comments.build], remote: true) do |f| %>
    
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.comment.errors.count, "error") %> prohibited this comment from being posted:</h2>

        <ul>
        <% @post.comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    

    <%= f.text_area :body, hide_label: true, required: true %>
    <%=f.form_group do %>
      <%= f.submit "Submit comment", class: "btn btn-primary btn-lg" %>
    <% end %>
  <% end %>
<% end %>
  