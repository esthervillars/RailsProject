<div class="container space">
  <div class="row">

  <% if signed_in? && current_user.admin? %>
    <div class="col-sm-4">
    	<%= link_to 'Write a new post', new_post_path, class:"btn btn-default btn-lg" %>
    </div>
    <% end %>
    <div class="col-sm-8 pull-right">
      <%= form_tag("/posts", method: "get", class: "navbar-form navbar-right", role: "search") do %>
                
        <%= text_field_tag('q', nil, placeholder: "Search", class: "form-control") %>
        <%= submit_tag("Go", class: "btn btn-default", id: "search") %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">

	<div class="row space">
		<% @posts.each do |post| %>
			<%= render post %>
		<% end %>

		<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
	</div>
</div>