<div class="container">
	<h2>Forgot your password?</h2>

	<div class="row sectionPadding">
    <div class="col-md-12">

			<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, layout: :horizontal, label_col: "col-md-1", control_col: "col-md-4") do |f| %>
	  
	  		<%= devise_error_messages! %>

	  		<%= f.email_field :email, label: "Email" %>

	  		<%=f.form_group do %>
	        <%= f.primary "Send me reset password instructions" %>
	      <% end %>

			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>

