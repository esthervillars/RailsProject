<div class="container space">
  <h2>Log in</h2>

    
      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), layout: :horizontal, label_col: "col-md-3 col-sm-4", control_col: "col-md-6 col-sm-6") do |f| %>
      

        <%= f.email_field :email, label: "Email" %>
        <%= f.password_field :password, label: "Password" %>
      

        <% if devise_mapping.rememberable? -%>
          <%= f.form_group :remember_me do %>
            <%= f.check_box :remember_me do %>
            Remember me
            <% end %>
          <% end %>
        <% end -%>

        <%=f.form_group do %>
          <%= f.primary "Login" %>
        <% end %>

      <% end %>

      <%= render "devise/shared/links" %>
    
  
</div>


  
  


  